{
  "manifest_version": 3,
  "name": "ChatGPT Buddy",
  "version": "1.0.3",
  "description": "Send selected text to an AI and ask for what it means, or read it in natural voice.",
  "permissions": [
    "contextMenus",
    "tabs",
    "storage",
    "scripting",
    "activeTab",
    "sidePanel"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://openrouter.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "options_page": "options.html",
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "commands": {
    "open-side-panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Open side panel"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
